<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        //wrap_content pega someno o espaÃ§o deste componente
        <TextView
            android:id="@+id/calculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3+4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="-50dp"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="40sp"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TableRow
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/CE"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text="CE"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parentese_abrindo"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text="("
                android:textColor="@color/white"
                android:layout_height="match_parent"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parentese_fechando"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text=")"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text="/"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sete"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="7"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oito"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="8"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nove"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="9"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicacao"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text="*"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/quatro"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="4"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cinco"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="5"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seis"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="6"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/subtracao"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text="-"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/um"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="1"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dois"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="2"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tres"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="3"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/soma"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text="+"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="."
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:text="0"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <ImageButton
                android:id="@+id/apagar"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul_claro"
                android:src="@drawable/ic_delete_24"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/result"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/azul"
                android:text="="
                android:textColor="@color/white"
                android:layout_height="match_parent"
                />

        </TableRow>


    </TableLayout>


</LinearLayout>